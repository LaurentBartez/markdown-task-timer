{
  "name": "markdown-todo-timer",
  "displayName": "Markdown Todo Timer",
  "publisher": "ThomasKnorr",
  "description": "Start logging work-effort on your markdown todo list.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "license": "SEE LICENSE IN License.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/LaurentBartez/markdown-todo-timer.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-todo-timer.toggleTimer",
        "title": "Toggle timer",
        "category": "Markdown Todo Timer"
      },
      {
        "command": "markdown-todo-timer.promoteTask",
        "title": "Promote task",
        "category": "Markdown Todo Timer"
      },
      {
        "command": "markdown-todo-timer.demoteTask",
        "title": "Demote task",
        "category": "Markdown Todo Timer"
      },
      {
        "command": "markdown-todo-timer.makeReport",
        "title": "Make report",
        "category": "Markdown Todo Timer"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-todo-timer.toggleTimer",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      },
      {
        "command": "markdown-todo-timer.promoteTask",
        "key": "ctrl+alt+[Period]",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      },
      {
        "command": "markdown-todo-timer.demoteTask",
        "key": "ctrl+alt+[Comma]",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dataframe-js": "^1.4.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/moment": "^2.13.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.8",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "data-forge": "^1.9.6",
    "html-tableify": "^0.0.2",
    "markdown-table-ts": "^1.0.3",
    "moment": "^2.29.4"
  }
}
