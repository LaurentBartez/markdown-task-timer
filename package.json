{
  "name": "markdown-todo-timer",
  "displayName": "Markdown todo timer",
  "description": "time your markdown tasks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-todo-timer.toggleTimer",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-todo-timer.toggleTimer",
        "title": "Toggle timer"
      },
      {
        "command": "markdown-todo-timer.promote",
        "title": "Promote task"
      },
      {
        "command": "markdown-todo-timer.demote",
        "title": "Demote task"
      },
      {
        "command": "markdown-todo-timer.makeReport",
        "title": "Make report"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-todo-timer.toggleTimer",
        "key": "ctrl+alt+[Minus]",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      },
      {
        "command": "markdown-todo-timer.promoteTask",
        "key": "ctrl+alt+[Period]",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      },
      {
        "command": "markdown-todo-timer.demoteTask",
        "key": "ctrl+alt+[Comma]",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dataframe-js": "^1.4.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/moment": "^2.13.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "data-forge": "^1.9.6",
    "html-tableify": "^0.0.2",
    "markdown-table-ts": "^1.0.3",
    "moment": "^2.29.4"
  }
}
